    <!--顶部控制区-->
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/gvideo_ic_close"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gvideo_ic_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="我是顶部的标题" />
    </LinearLayout>

    <!--底部控制区-->
    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#7f000000"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <SeekBar
            android:id="@+id/sb_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:maxHeight="2.0dip"
            android:minHeight="2.0dip"
            android:progressDrawable="@drawable/gvideo_white_seekbar_style"
            android:thumb="@drawable/gvideo_shaple_oval_white_12"
            android:thumbOffset="5dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pb_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:maxHeight="2.0dip"
            android:minHeight="2.0dip"
            android:progressDrawable="@drawable/gvideo_white_seekbar_style"
            android:thumbOffset="5dp" />

    </FrameLayout>

    <!--中间开始播放按钮-->

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/gvideo_ic_video_play"
        android:visibility="visible" />

</RelativeLayout>